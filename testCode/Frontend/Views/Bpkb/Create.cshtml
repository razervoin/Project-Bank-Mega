@model Frontend.Models.TrBpkb

<h2>Create BPKB</h2>

<form asp-controller="Bpkb" asp-action="Create" method="post">
    <div>
        <label>Agreement Number:</label>
        <input asp-for="agreement_number" />
    </div>
    <div>
        <label>BPKB No:</label>
        <input asp-for="bpkb_no" />
    </div>
    <div>
        <label>Branch ID:</label>
        <input asp-for="branch_id" />
    </div>
    <div>
        <label>BPKB Date:</label>
        <input asp-for="bpkb_date" type="date" />
    </div>
    <div>
        <label>Faktur No:</label>
        <input asp-for="faktur_no" />
    </div>
    <div>
        <label>Faktur Date:</label>
        <input asp-for="faktur_date" type="date" />
    </div>
    <div>
        <label>Location:</label>
        <select asp-for="location_id">
            @foreach (var location in ViewBag.Locations)
            {
                <option value="@location.location_id">@location.location_name</option>
            }
        </select>
    </div>
    <div>
        <label>Police No:</label>
        <input asp-for="police_no" />
    </div>
    <button type="submit">Submit</button>
    @if (ViewBag.Error != null)
    {
        <p style="color:red;">@ViewBag.Error</p>
    }
</form>
